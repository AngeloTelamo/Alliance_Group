@model ASI.Basecode.Services.ServiceModels.BookMasterListViewModel
@{
    ViewData["Title"] = "Books";
}
<style>
    .top-book {
        background-color: #ffeeba; /* Highlight color for top books */
        font-weight: bold;
    }

</style>

<div class="text-center">
    <h1 class="display-4">Flip Thru</h1>
    <p>Test page 1</p>
    @using (Html.BeginForm("Search", "Home"))
    {
        <div class="row">
            <div class="col-sm-2">
                @Html.Label("Search")
            </div>
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.Filters.SearchTerm, new { @class = "form-control", placeholder = "Discover" })
            </div>
        </div>
        <div class="row" style="margin-top: 35px; margin-bottom: 35px">
            <div class="col" style="padding: 0px 40px 0px 40px; display:flex; justify-content:flex-end">
                <input class="btn btn-dark" type="submit" name="action" value="search" style="margin-right: 15px" />
                <input class="btn btn-light" type="button" name="action" value="clear" onclick="clearFilters()" />
            </div>
        </div>
    }

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    Book Title
                </th>
                <th>
                    Book Author
                </th>
                <th>
                    Average Rating
                </th>
                <th>
                    Review Count
                </th>
                <th>
                    Book Image
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.BookList)
            {
                var BookImage = "~/clients/" + (item.BookImage ?? "noimage.jpg");
               <tr class="@((item.IsTopBook) ? "top-book" : "")">
                    <td>
                        @Html.DisplayFor(modelItem => item.BookTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookAuthor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AverageRating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReviewCount)
                    </td>
                    <td>
                        <img src="@BookImage" alt="Book Image" asp-append-version="true" />
                    </td>

                    <td>
                        <a asp-controller="Home" asp-action="BookReviews" asp-route-bookId="@item.BookId">Leave a Review</a> ||
                        <a asp-controller="Home" asp-action="ReadBooks" asp-route-bookId="@item.BookId">Start Reading</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @Html.ActionLink("Return to main", "Index", "Home")
</div>

@section scripts {
    <script>
        var listItems = '@Html.Raw(Json.Serialize(@Model.BookList))';
        console.table(JSON.parse(listItems));

        function clearFilters() {
            console.log("CLEARED")
            $('#Filters_BId').val('');
            $('#Filters_BookTitle').val('');
        }
    </script>
}
