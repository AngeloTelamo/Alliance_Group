@using ASI.Basecode.Services.ServiceModels
@using static ASI.Basecode.Resources.Views.Screen
@model UserListViewModel
@{
    ViewData["Title"] = "Users";
}

<div class="position-relative mt-3">
    <div class="row">
        <div class="col-md-10">
            <h1 class="text-start">
                Flip Thru
            </h1>
        </div>
        <div class="col-md-2">
            <img src="~/img/dashboard-girl.png" alt="Dashboard Girl" class="dashboard-image position-absolute">
        </div>
    </div>
</div>

<h4 class="text-start display-4">
    User List
</h4>

<div class="row">
    <div class="col-6">

        <div class="float-start search-container">
            <div class="form">
                <i class="fa fa-search"></i>
                <input type="text" class="form-control form-input" placeholder="Search User">
            </div>
        </div>

    </div>

    <div class="col-6">
        <a class="btn btn-primary float-right mt-3" role="button" asp-controller="" asp-action="">Add User <i class="fa-solid fa-plus"></i> </a>
    </div>

</div>

<div class="row">
    <div class="col">

        <table class="table table-hover" id="table-books">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Email</th>
                    <th scope="col" class="text-center">Name</th>
                    <th scope="col" class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.UserList)
                {
                    <tr>
                        <th scope="row" class="text-center">@Html.DisplayFor(modelItem => item.Email)</th>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="text-center">
                            <a class="btn btn-primary" asp-controller="Account" asp-action="Update" asp-route-userId="@item.Email">Edit <i class="fa-regular fa-pen-to-square"></i> </a>
                            <a class="btn btn-danger" asp-controller="Account" asp-action="Delete" asp-route-userId="@item.Email">Delete <i class="fa-solid fa-trash"></i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>