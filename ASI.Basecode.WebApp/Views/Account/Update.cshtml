@using ASI.Basecode.Services.ServiceModels
@using static ASI.Basecode.Resources.Views.Screen
@model UserEditViewModel
@{
    ViewData["Title"] = "Update User";
}

<div class="position-relative mt-3">
    <div class="row">
        <div class="col-md-10">
            <h1 class="text-start">
                Flip Thru
            </h1>
        </div>
        <div class="col-md-2">
            <img src="~/img/dashboard-girl.png" alt="Dashboard Girl" class="dashboard-image position-absolute">
        </div>
    </div>
</div>

<h4 class="text-start display-4">
    Update User
</h4>

<div class="container mt-3 userupdate-container">

    <form method="post" action="/Account/Update" enctype="multipart/form-data">

        <div class="form-outline mb-4">
            <label class="form-label" for="userId">@UserId</label>
            <input type="text" id="userId" class="form-control"
                    asp-for="Email" placeholder="Enter userid" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="name">Name</label>
            <input type="text" id="name" class="form-control"
                    asp-for="Name" placeholder="Enter name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-outline mb-4">
            @Html.CheckBoxFor(model => model.UpdatePasswordFlg, new { id = "UpdatePasswordFlg" })
            @Html.LabelFor(model => model.UpdatePasswordFlg)
        </div>

        <div class="form-outline mb-4">
            <label class="form-label" for="password">Password</label>
            <input type="password" id="password" class="form-control" asp-for="Password" placeholder="Enter password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-outline mb-4">
            <label class="form-label" for="confirmpassword">Confirm Password</label>
            <input type="password" id="confirmpassword" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="row mb-5">
            <div class="col">
                <button class="btn btn-primary btn-block" type="submit">
                    Update
                </button>
            </div>
            <div class="col">
                <a class="btn btn-danger btn-block" asp-controller="Account" asp-action="Users">Back </a>
            </div>
        </div>

    </form>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#UpdatePasswordFlg').change(function () {
                var isChecked = $(this).is(':checked');

                $('#password').prop('readonly', !isChecked);
                $('#confirmpassword').prop('readonly', !isChecked);
            });

            $('#UpdatePasswordFlg').change();
        });
    </script>
}

