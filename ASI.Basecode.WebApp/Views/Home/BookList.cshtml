@model ASI.Basecode.Services.ServiceModels.BookMasterListViewModel
@{
    ViewData["Title"] = "Book List";
}
@using static ASI.Basecode.Resources.Views.Screen

<div class="position-relative mt-3">
    <div class="row">
        <div class="col-md-10">
            <h1 class="text-start">
                Flip Thru
            </h1>
        </div>
        <div class="col-md-2">
            <img src="~/img/dashboard-girl.png" alt="Dashboard Girl" class="dashboard-image position-absolute">
        </div>
    </div>
</div>

<div class="row">
    <div class="col">

        <h4 class="text-start">
            Book Genre
        </h4>

        <div class="float-start search-container">
            <div class="form">
                <i class="fa fa-search"></i>
                <input type="text" class="form-control form-input" placeholder="Search Book">
            </div>
        </div>

        <table class="table table-hover" id="table-genre">
            <thead>
                <tr>
                    <th scope="col">Book Genre</th>
                    <th scope="col">Book Title</th>
                    <th scope="col">Book Author</th>
                    <th scope="col">Book Description</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Fantasy</th>
                    <td>Percy Jackson</td>
                    <td>Rick Riordian</td>
                    <td>Adventure Mythology</td>
                    <td><a class="btn btn-primary" href="#" role="button">View <i class="fa-regular fa-eye"></i> </a></td>
                    <td>
                        <a class="btn btn-primary" href="#" role="button">Edit <i class="fa-regular fa-pen-to-square"></i> </a>
                        <a class="btn btn-danger" href="#" role="button">Delete <i class="fa-solid fa-trash"></i> </a>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
</div>

<div class="row mb-2">
    <div class="col text-center" id="number_books">

        <h4 class="mt-3 mb-3">Number of Books</h4>
        <p class="mb-3">42</p>

    </div>
    <div class="col text-center" id="number_reviews">

        <h4 class="mt-3 mb-3">Number of Reviews</h4>
        <p class="mb-3">50</p>

    </div>
</div>

<div class="row">
    <div class="col">

        <h4 class="text-start">
            Review List
        </h4>

        <table class="table table-hover" id="table-user-reviews">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Book Title</th>
                    <th scope="col">Review</th>
                    <th scope="col">Rating</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">John</th>
                    <td>Percy Jackson</td>
                    <td>Good Book</td>  
                    <td>5 stars</td>
                    <td><a class="btn btn-primary" href="#" role="button">View <i class="fa-regular fa-eye"></i> </a></td>
                    <td>
                        <a class="btn btn-primary" href="#" role="button">Edit <i class="fa-regular fa-pen-to-square"></i> </a>
                        <a class="btn btn-danger" href="#" role="button">Delete <i class="fa-solid fa-trash"></i> </a>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
</div>



