<div class="row">
    <div class="col">

        <h4 class="text-start">
            Book List
        </h4>

        <div class="float-start search-container">
            <div class="form">
                <i class="fa fa-search"></i>
                <input type="text" class="form-control form-input" placeholder="Search Book">
            </div>
        </div>
        <div class="tbl-container">
        <table class="table table-hover" id="table-genre">
                <thead>
                    <tr>
                        <th scope="col">Book ID</th>
                        <th scope="col">Book Title</th>
                        <th scope="col">Book Author</th>
                        <th scope="col">Book Description</th>
                        <th scope="col">Book Genre</th>
                        <th scope="col">Book Cover</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.BookList)
                    {
                        var BookImages = "/books/" + (item.BookImage ?? "noimage.jpg");
                        <tr>
                            <th scope="row">@Html.DisplayFor(modelItem => item.BookId)</th>
                            <td>@Html.DisplayFor(modelItem => item.BookTitle)</td>
                            <td>@Html.DisplayFor(modelItem => item.BookAuthor)</td>
                            <td>@Html.DisplayFor(modelItem => item.BookContext)</td>
                            <td>@Html.DisplayFor(modelItem => item.BookGenreName)</td>
                            <td><img src="@BookImages" alt="Book Image" asp-append-version="true" /></td>
                            <td>
                                <a class="btn edit-button btn-sm" role="button" asp-controller="Admin" asp-action="AdminBookUpdate" asp-route-bookId="@item.BookId">Edit <i class="fa-regular fa-pen-to-square"></i> </a>
                                <a class="btn delete-button btn-sm" role="button" asp-controller="Admin" asp-action="RemoveBook" asp-route-bookId="@item.BookId">Delete <i class="fa-solid fa-trash"></i> </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

