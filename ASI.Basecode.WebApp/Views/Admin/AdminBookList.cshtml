@model ASI.Basecode.Services.ServiceModels.BookMasterListViewModel
@{
    ViewData["Title"] = "Home Page";
}
@using static ASI.Basecode.Resources.Views.Screen

<div class="text-center">
    <h1 class="display-4">BookList</h1>
    <p>Test page 1</p>
    @using (@Html.BeginForm("Search", "Account"))
    {
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.Filters.BId)
            </div>
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.Filters.BId)
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.Filters.BookTitle)
            </div>
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.Filters.BookTitle)
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.Filters.BookAuthor)
            </div>
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.Filters.BookAuthor)
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(model => model.Filters.BookDes)
            </div>
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.Filters.BookDes)
            </div>
        </div>
        <div class="row" style="margin-top: 35px; margin-bottom: 35px">
            <div class="col" style="padding: 0px 40px 0px 40px; display:flex; justify-content:flex-end">
                <input class="btn btn-dark" type="submit" name="action" value="search" style="margin-right: 15px" />
                <input class="btn btn-light" type="button" name="action" value="clear" onclick="clearFilters()" />
            </div>
        </div>
    }

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    Book ID
                </th>

                <th>
                    Book Title
                </th>

                <th>
                    Book Author
                </th>

                <th>
                    Book Description
                </th>

                <th>
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BookList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookTitle)
                    </td>
                   <td>
                        @Html.DisplayFor(modelItem => item.BookAuthor)
                    </td>
                    <td>
                        <a asp-controller="Account" asp-action="Update" asp-route-userId="@item.BId">Edit</a> |
                        <a asp-controller="Account" asp-action="Delete" asp-route-userId="@item.BId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    @Html.ActionLink("Return to main", "Index", "Home")
</div>
@section scripts {
    <script>
        var listItems = @Html.Raw(Json.Serialize(@Model.BookList));
        console.log(listItems);

        function clearFilters() {
            console.log("CLEARED")
            $('#Filters_BId').val('');
            $('#Filters_BookTitle').val('');
            $('#Filters_BookAuthor').val('');
            $('#Filters_BookDes').val('');
        }
    </script>
}