@using ASI.Basecode.Services.ServiceModels
@model BookMasterEditViewModel
@{
    ViewData["Title"] = "Update Book";
}
@using static ASI.Basecode.Resources.Views.Screen

<div class="position-relative mt-3">
    <div class="row">
        <div class="col-md-10">
            <h1 class="text-start">
                Flip Thru
            </h1>
        </div>
        <div class="col-md-2">
            <img src="~/img/dashboard-girl.png" alt="Dashboard Girl" class="dashboard-image position-absolute">
        </div>
    </div>
</div>

<h4 class="text-start display-4">
    Update Book
</h4>

<div class="container mt-3 bookupdate-container">

    <div class="row">
        <div class="col-6">
            <form method="post" action="/Admin/AdminBookUpdate" enctype="multipart/form-data">

                <div class="form-outline mb-4">
                    <label class="form-label" for="BooksID">Book Id</label>
                    <input type="text" id="BooksID" class="form-control"
                           asp-for="BId" placeholder="Enter Book ID" readonly />
                    <span asp-validation-for="BId" class="text-danger"></span>
                </div>

                <div class="form-outline mb-4">
                    <label class="form-label" for="bookTitle">Book Title</label>
                    <input type="text" id="bookTitle" class="form-control"
                           asp-for="BookTitle" placeholder="Enter Book Title"/>
                    <span asp-validation-for="BookTitle" class="text-danger"></span>
                </div>

                <div class="form-outline mb-4">
                    <label class="form-label" for="bookAuthor">Book Author</label>
                    <input type="text" id="bookAuthor" class="form-control"
                           asp-for="BookAuthor" placeholder="Enter Book Author"/>
                    <span asp-validation-for="BookAuthor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BookDes" class="control-label">Book Genre</label>
                    <select asp-for="BookDes" class="form-control">
                        <option value="">Select an option</option>
                        <option value="Horror">Horror</option>
                        <option value="Fantasy">Fantasy</option>
                        <option value="Fiction">Fiction</option>
                        <option value="Novel">Novel</option>
                        <option value="Thriller">Thriller</option>
                        <option value="Romance">Romance</option>

                    </select>
                    <span asp-validation-for="BookDes" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label class="form-label" for="bookImageFile">Book Image</label>
                    <div class="custom-file">
                        <input type="file" id="bookImageFile" name="BookImage" accept="image/*" asp-for="BookImage" class="custom-file-input" />
                        <span asp-validation-for="BookImage" class="text-danger"></span>
                        <label class="custom-file-label" for="bookImageFile">Choose file</label>
                    </div>
                </div>

                <div class="text-center pt-1 mb-5 pb-1 d-flex flex-column align-items-center">
                    <button class="btn update-btn btn-block login-btn gradient-custom-2 mb-3" type="submit">
                        Update Book
                    </button>
                </div>
            </form>
        </div>

        <div class="col-6">
            <h4 class="text-center display-4">
                Current Data
            </h4>
            <ul class="list-group text-center">
                <li class="list-group-item">Book Title: @Model.BookTitle</li>
                <li class="list-group-item">Book Author: @Model.BookAuthor</li>
                <li class="list-group-item">Book Description: @Model.BookDes</li>
                <li class="list-group-item"><img src="~/books/@(Model.BookImage ?? "noimage.jpg")" alt="Book Image" asp-append-version="true" /></li>
            </ul>
          
        </div>

    </div>
    
</div>

@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        var successMessage = '@TempData["SuccessMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        } else if (successMessage) {
            toastr.success(successMessage);
        }

        $('#bookImageFile').on('change', function () {
            var files = Array.from(this.files).map(file => file.name);
            $('.custom-file-label').html(files.join(', '));
        });

    </script>

}