@using ASI.Basecode.Services.ServiceModels
@using static ASI.Basecode.Resources.Views.Screen
@model BookMasterEditViewModel
@{
    ViewData["Title"] = "Update Page";
}

<div class="container py-5 h-100 register-box">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
            <div class="card rounded-3 text-black">
                <div class="row g-0">
                    <div class="card-body p-md-5 mx-md-4">
                        <form method="post" action="/Admin/AdminBookUpdate">
                            <div class="form-outline mb-4">
                                <label class="form-label" for="BooksId">Book Id</label>
                                <input type="text" id="BooksID" class="form-control"
                                       asp-for="BookId" placeholder="Enter Book ID" /> 
                                <span asp-validation-for="BookId" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="bookTitle">Book Title </label>
                                <input type="text" id="bookTitle" class="form-control"
                                       asp-for="BookTitle" placeholder="Enter Book Title" />
                                <span asp-validation-for="BookTitle" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="bookAuthor">Book Author</label>
                                <input type="text" id="bookAuthor" class="form-control"
                                       asp-for="BookAuthor" placeholder="Enter Book Author" />
                                <span asp-validation-for="BookAuthor" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="bookSynopsis">Summary</label>
                                <textarea id="bookSynopsis" class="form-control" rows="4"
                                          asp-for="BookSynopsis" placeholder="Enter Book Synopsis"></textarea>
                                <span asp-validation-for="BookSynopsis" class="text-danger"></span>
                            </div>

                           <!--- <div class="form-group">
                                <label asp-for="BookGenre" class="control-label">Book Genre</label>
                                <select asp-for="BookGenre" class="form-control">
                                    <option value="">Select an option</option>
                                    <option value="Horror">Horror</option>
                                    <option value="Fantasy">Fantasy</option>
                                    <option value="Fiction">Fiction</option>
                                    <option value="Novel">Novel</option>
                                    <option value="Thriller">Thriller</option>
                                    <option value="Romance">Romance</option>

                                </select>
                                <span asp-validation-for="BookGenre" class="text-danger"></span>
                                                        </div>-->

                            <div class="text-center pt-1 mb-5 pb-1 d-flex flex-column align-items-center">
                                <button class="btn btn-primary btn-block login-btn gradient-custom-2 mb-3" type="submit">
                                    Update
                                </button>

                                <a asp-controller="Admin" asp-action="AdminBookList">
                                    &#8592 Back
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        var successMessage = '@TempData["SuccessMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        } else if (successMessage) {
            toastr.success(successMessage);
        }
    </script>
}