@using ASI.Basecode.Services.ServiceModels
@model BookGenreList
@using static ASI.Basecode.Resources.Views.Screen
@{
    ViewData["Title"] = "Genre Lists";
}
@section styles {
	<link href="~/css/genrelist.css" rel="stylesheet" />
}
<div class="position-relative mt-3">
    <div class="row">
        <div class="col-md-10">
            <h1 class="text-start">
                Flip Thru
            </h1>
        </div>
        <div class="col-md-2">
            <img src="~/img/dashboard-girl.png" alt="Dashboard Girl" class="dashboard-image position-absolute">
        </div>
    </div>
</div>

<h4 class="text-start display-4">
    Genre List
</h4>

@using (@Html.BeginForm("SearchGenre", "Admin"))
{
    <div class="row">
        <div class="col-6">
            <div class="float-start search-container">
                <div class="form">
                    <div class="input-group mb-2 mt-2">
                        <i class="fa fa-search"></i>
                        <input class="form-control form-input input-sm rounded" id="Filters_GenreName" name="Filters.GenreName" type="text" placeholder="Search User" />
                        <input class="btn search-button btn-sm ml-1" type="submit" name="action" value="Search" />
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6">
            <a class="btn add-genre-button btn-sm float-right mt-3 mr-2" asp-action="BookGenreAdd" asp-controller="Admin">Genre <i class="fa-solid fa-plus"></i></a>
        </div>

    </div>
}

<div class="row">
    <div class="col">
        <div class="tbl-container">
            <table class="table table-hover" id="table-genre">
                <thead>
                    <tr class="text-center">
                        <th scope="col">Genre ID</th>
                        <th scope="col">Type of Genre</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.GenreList)
                    {
                        <tr class="text-center">
                            <th scope="row">@item.Genre.GenreId</th>
                            <td>@item.Genre.GenreName</td>
                            <td>
                                <a class="btn add-books-button btn-sm" role="button" asp-controller="Admin" asp-action="AdminBookAdd" asp-route-genreId="@item.BookGenreId">Add <i class="fa-solid fa-plus"></i> </a> @* Temp book add *@
                                <a class="btn edit-button btn-sm" role="button" asp-controller="Admin" asp-action="ViewBooks" asp-route-genreId="@item.Genre.GenreId" asp-route-genreName="@item.Genre.GenreName">View <i class="fa-solid fa-eye"></i> </a>
                                <a class="btn delete-button btn-sm" role="button" asp-controller="Admin" asp-action="RemoveGenre" asp-route-genreId="@item.BookGenreId">Delete <i class="fa-solid fa-trash"></i> </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var listItems = '@Html.Raw(Json.Serialize(@Model.GenreList))';
        console.table(JSON.parse(listItems));

    </script>
}